#include<stdio.h>
#define MAX 10
void insertion(int *a);
void main(){
    
    int a[MAX];
    int i;

    printf("\n Enter any 10 numbers \n");
    for(i=0;i<10;i++)
    {
        scanf("%d",&a[i]);
    }
    
    printf("\n Array before sorting\n");
    for(i=0;i<10;i++)
    {
        printf(" %d",a[i]);
    }
    
    insertion(a);
    
    printf("\n Array after sorting\n");
    for(i=0;i<10;i++)
    {
        printf("\t%d",a[i]);
    }
}

void insertion (int *a){
    
    int i,j,k,index,t;
    for(i=0;i<MAX;i++)
    {
        index=a[i];
        j=i;
        
        while((j>0) && (a[j-1]>index))
        {
            t=a[j];
            a[j]=a[j-1];
            a[j-1]=t;
            j--;
        }
        printf("\n");
        for( k=0;k<MAX;k++)
        {
            printf(" %d",a[k]);
        }
        printf("\n");
    }
}
